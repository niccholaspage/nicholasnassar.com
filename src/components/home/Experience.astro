---
import { positions } from "../../data/positions";
---

<div>
  <h3 class="text-center text-4xl mb-5">Experience</h3>
  <div class="lg:grid lg:grid-cols-3 lg:gap-3">
    {
      positions.map((position, i) => {
        const classes = ["px-4", "lg:px-14", "lg:relative"];

        if (i === 1) {
          classes.push(
            "lg:before:content-['']",
            "lg:before:w-1",
            "lg:before:bg-violet-500",
            "lg:before:h-full",
            "lg:before:absolute",
            "lg:before:top-0",
            "lg:before:left-0",
            "lg:before:-skew-x-6",
            "lg:after:content-['']",
            "lg:after:w-1",
            "lg:after:bg-violet-500",
            "lg:after:h-full",
            "lg:after:absolute",
            "lg:after:top-0",
            "lg:after:right-0",
            "lg:after:-skew-x-6"
          );
        }
        return (
          <div>
            <p class="text-center text-2xl">{position.title}</p>
            <p class="text-center text-xl">{position.company}</p>
            <p class="text-center text-lg mb-4">{position.time_period}</p>
            <div class={classes.join(" ")}>
              <ul class="list-disc">
                {position.bullet_points.map((bullet_point) => (
                  <li>{bullet_point}</li>
                ))}
              </ul>
            </div>
          </div>
        );
      })
    }
  </div>
</div>
